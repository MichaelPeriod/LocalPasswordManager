<Window x:Class="LocalPasswordManager.NewEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalPasswordManager"
        mc:Ignorable="d"
        Title="Unnamed Password Manager - Browser" Height="350" Width="350"
        Background="#343434"
        SizeToContent="Height"
        ResizeMode="NoResize">

    <StackPanel Margin="20">
        <Label Content="Website:" FontSize="25" Foreground="White" />
        <TextBox FontSize="25" x:Name="websitetb"/>

        <Label Content="Username:" FontSize="25" Foreground="White" />
        <TextBox FontSize="25" x:Name="usertb"/>

        <Label Content="Password:" FontSize="25" Foreground="White" />
        <TextBox FontSize="25" x:Name="passtb"/>

        <Button Content="Add" HorizontalAlignment="Center" FontSize="25" Margin="20" Padding="5" Foreground="White"  Background="#11d543" FontWeight="SemiBold" Click="Button_Click"/>
    </StackPanel>
</Window>
